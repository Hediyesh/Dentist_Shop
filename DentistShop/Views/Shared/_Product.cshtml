@model DataLayer.Product
<div id="productDiv@(Model.productId)" class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
    <div style="border: 1px solid lightgray;">
        <div class="row" style=" margin: 2px; border-radius: 2px">
            <img onclick="ShowProduct(@Model.productId);" src="/Pictures/ProductImages/@Model.imageName" class="imggallary" style="cursor:pointer" />
            <p style="float: right; padding: 5px; cursor: pointer" onclick="ShowProduct(@Model.productId);">@Model.productName</p>
        </div>
        <div class="row" style=" margin: 2px; border-radius: 2px">
            <p style="float: right; padding: 5px; cursor: pointer" onclick="ShowProduct(@Model.productId);">@Model.productPriceWithDiscont تومان</p>
        </div>
    </div>
</div>

