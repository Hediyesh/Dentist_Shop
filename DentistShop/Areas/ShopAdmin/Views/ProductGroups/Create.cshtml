@model DataLayer.ProductGroup

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Ajax.BeginForm("Create", "ProductGroups", FormMethod.Post, new AjaxOptions()
    {
        OnSuccess = "hideGrModal",
        UpdateTargetId = "listGroup",
    }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.parentId)
        <div class="row">
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                @Html.LabelFor(model => model.groupName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                @Html.EditorFor(model => model.groupName, new { htmlAttributes = new { @class = "form-control", @style = "width:100%" } })
                @Html.ValidationMessageFor(model => model.groupName, "", new { @class = "text-danger", @id = "groupNameAddError" })
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>

        </div>
        <br />
        <div class="row ">
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                <input type="submit" value="ثبت گروه" class="btn btn-sm btn-success" style="float:right" />
            </div>
            <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
        </div>

    }
</body>
</html>
