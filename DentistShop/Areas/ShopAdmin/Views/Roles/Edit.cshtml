@model DataLayer.Roles

@{
    ViewBag.Title = "Edit";
    Layout = null;
    
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RoleId)

        <div class="row form-group">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", @id = "roleNameEdit" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger", @id = "roleNameEditError" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.LabelFor(model => model.RoleTitle, htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.RoleTitle, new { htmlAttributes = new { @class = "form-control", @id = "roleTitleEdit" } })
                @Html.ValidationMessageFor(model => model.RoleTitle, "", new { @class = "text-danger", @id = "roleTitleEditError" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-offset-3 col-md-3">
                <button type="button" onclick="EditRolePost(@Model.RoleId)" class="btn btn-success btn-sm">ثبت ویرایش</button>
            </div>
        </div>
        <br />
    </div>
}

