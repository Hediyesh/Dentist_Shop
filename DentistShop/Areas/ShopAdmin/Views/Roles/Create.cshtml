@model DataLayer.Roles

@{
    ViewBag.Title = "Create";
    Layout = null;
}


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row form-group">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label " })
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control", @id = "roleName", @value = "" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger", @id = "roleNameError" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                @Html.LabelFor(model => model.RoleTitle, htmlAttributes: new { @class = "control-label " })
            </div><div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.RoleTitle, new { htmlAttributes = new { @class = "form-control", @id = "roleTitle", @value = "" } })
                @Html.ValidationMessageFor(model => model.RoleTitle, "", new { @class = "text-danger", @id = "roleTitleError" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-offset-3 col-md-3">
                <button type="button" onclick="CreateRolePost()" class="btn btn-success btn-sm">ایجاد</button>
            </div>
        </div>
    </div>
    <br />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

